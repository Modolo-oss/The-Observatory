# Database Configuration
# For Railway: Use ${{Postgres.DATABASE_URL}} in Railway dashboard
DATABASE_URL=postgresql://user:password@host:port/database

# Session Secret (REQUIRED in production)
# Generate a secure random string: openssl rand -base64 32
SESSION_SECRET=your-super-secret-session-key-min-32-chars-change-this

# External API Keys
# Sanctum Gateway API key for transaction routing
# Get your API key from: https://gateway.sanctum.so/
# NOTE: Without this key, the app runs in MOCK mode (simulated transactions, no real costs)
SANCTUM_GATEWAY_API_KEY=your_sanctum_gateway_api_key_here

# OpenRouter API key for AI insights (Claude 3.5 Sonnet)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Environment
NODE_ENV=production

# Port (Railway auto-assigns, leave empty for local dev)
# PORT=5000

# Transaction Simulator Controls (Cost Management)
# Enable/disable automatic transaction generation
# Default: false (DISABLED for cost control)
# Set to "true" only for demos or if you want continuous data generation
ENABLE_SIMULATOR=false

# Simulator interval in milliseconds (if enabled)
# Default: 30000 (30 seconds)
# Lower values = more transactions = higher costs
SIMULATOR_INTERVAL=30000

# Maximum daily transactions limit (safety feature - not yet implemented)
# Prevents runaway costs if simulator is accidentally left on
# MAX_DAILY_TRANSACTIONS=1000
